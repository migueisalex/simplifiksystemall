// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  user
  admin
  financeiro
}

enum UserStatus {
  Ativo
  Inadimplente
  Bloqueado
}

enum SubscriptionStatus {
  Active
  Canceled
  Defaulted
}

enum PostStatus {
  scheduled
  published
  inativo_por_downgrade
}

enum PostType {
  Post
  Story
  Reels
}

enum StaffRole {
  admin
  financeiro
}

model User {
  id                String             @id @default(uuid())
  fullName          String
  email             String             @unique
  passwordHash      String
  birthDate         DateTime
  role              UserRole           @default(user)
  status            UserStatus         @default(Ativo)
  geminiApiKey      String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  
  subscriptions     Subscription[]
  usageTrackers     UsageTracker[]
  posts             Post[]
  hashtagGroups     HashtagGroup[]
  auditLogs         AuditLog[]         @relation("TargetUser")
  
  @@map("users")
}

model Subscription {
  id                              String               @id @default(uuid())
  userId                          String
  packageTier                     Int                  @default(0)
  hasAiAddon                      Boolean              @default(false)
  status                          SubscriptionStatus   @default(Active)
  currentPeriodEnd                DateTime
  paymentGatewaySubscriptionId    String?
  createdAt                       DateTime             @default(now())
  updatedAt                       DateTime             @updatedAt
  
  user                            User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("subscriptions")
}

model UsageTracker {
  id            String    @id @default(uuid())
  userId        String
  period        String
  postCount     Int       @default(0)
  aiTextCount   Int       @default(0)
  aiImageCount  Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, period])
  @@map("usage_trackers")
}

model Post {
  id            String      @id @default(uuid())
  userId        String
  content       String      @db.Text
  platforms     Json
  scheduledAt   DateTime
  status        PostStatus  @default(scheduled)
  postType      PostType
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  mediaItems    MediaItem[]
  
  @@map("posts")
}

model MediaItem {
  id            String   @id @default(uuid())
  postId        String
  storageUrl    String
  mimeType      String
  aspectRatio   Float?
  edits         Json?
  createdAt     DateTime @default(now())
  
  post          Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  @@map("media_items")
}

model HashtagGroup {
  id        String   @id @default(uuid())
  userId    String
  name      String
  hashtags  String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("hashtag_groups")
}

model StaffMember {
  id            String      @id @default(uuid())
  email         String      @unique
  passwordHash  String
  role          StaffRole
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  auditLogs     AuditLog[]
  
  @@map("staff_members")
}

model AuditLog {
  id              String       @id @default(uuid())
  staffMemberId   String
  actionType      String
  targetUserId    String?
  details         Json?
  ipAddress       String?
  createdAt       DateTime     @default(now())
  
  staffMember     StaffMember  @relation(fields: [staffMemberId], references: [id], onDelete: Cascade)
  targetUser      User?        @relation("TargetUser", fields: [targetUserId], references: [id], onDelete: SetNull)
  
  @@map("audit_logs")
}
